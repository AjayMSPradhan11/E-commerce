    <Script>
        function removeItem(itemId) {
            // Send an AJAX request to the server to remove the item from the cart
            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/remove_product', true);
            xhr.setRequestHeader('Content-Type', 'application/json');
            xhr.onreadystatechange = function() {
                if (xhr.readyState === XMLHttpRequest.DONE) {
                    if (xhr.status === 200) {
                        console.log('Item removed successfully:', itemId);
                        window.location.reload(); // Reload the page to reflect changes
                    } else {
                        console.error('Error removing item:', xhr.responseText);
                    }
                }
            };
            xhr.send(JSON.stringify({ id: itemId }));
        }
